{
  "name": "stoplight",
  "version": "1.0.0",
  "description": "A simple boilerplate with webpack 4, eslint (airbnb), babel, scss.",
  "main": "index.js",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run dev",
    "babel": {
      "presets": [
        "env"
      ]
    },
    "build": "webpack && node-sass src/assets/scss -o dist/assets/css",
    "build:prod": " -p",
    "dev": "webpack-dev-server --mode development",
    "watch": "webpack --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "tailwindcss": "^0.5.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.10",
    "ejs": "^2.6.1",
    "ejs-html-loader": "^3.1.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "node-sass": "^4.7.2",
    "postcss": "^6.0.22",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  }
}
